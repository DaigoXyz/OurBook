<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBookActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Book"
        android:textSize="30dp"
        android:textStyle="bold"
        android:textColor="@color/woi"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/judul"
        android:layout_centerHorizontal="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="75dp"
        app:cardElevation="8dp"
        android:layout_marginTop="50dp">

        <ImageView
            android:id="@+id/addfoto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_insert_photo_24" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Note : Image harus di Isi!!!"
        android:textSize="13dp"
        android:textStyle="italic"
        android:layout_below="@+id/cardView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/addNama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/note"
        android:layout_marginTop="16dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Nama"
        android:padding="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/addNP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addNama"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_person_24"
        android:drawablePadding="10dp"
        android:hint="Nama Panggilan"
        android:padding="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/addEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addNP"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_email_24"
        android:drawablePadding="10dp"
        android:hint="Email"
        android:padding="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/addAlamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addEmail"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_location_on_24"
        android:drawablePadding="10dp"
        android:hint="Alamat"
        android:padding="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/addTglLahir"
        android:inputType="date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addAlamat"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_date_range_24"
        android:drawablePadding="10dp"
        android:hint="Tanggal Lahir"
        android:padding="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/addHP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/addTglLahir"
        android:layout_marginTop="10dp"
        android:background="@drawable/round"
        android:drawableStart="@drawable/baseline_call_24"
        android:drawablePadding="10dp"
        android:hint="Nomor Telepon"
        android:inputType="phone"
        android:padding="20dp"
        android:backgroundTint="@color/blue"
        android:textColor="@color/black"
        android:textColorHint="@color/black" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/saveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:backgroundTint="@color/blue"
        android:src="@drawable/baseline_done_24"
        app:tint="@color/black" />

</RelativeLayout>
